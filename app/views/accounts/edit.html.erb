<%= form_with(model: @account, local: true) do |form| %>
  <p id="komunikat" class="<%= flash[:class] %>"><%= flash[:komunikat]  %></p>
  <h1>Recharge your account</h1>

  <div class="field" style="margin-top: 3%">
    <b>Current amount:</b>
    <%= @account.balance %>
  </div>

  <div class="field" style="margin-top: 3%; width:60% ">
    <%= form.label :recharge_amount %>
    <%= form.text_field :recharge_amount, id: :recharge_amount, class: 'form-control', style: 'margin-top: 3%; margin-bottom: 3%'%>
  </div>

  <div class="actions">
    <%= form.submit :submit, class: 'btn btn-primary' %>
  </div>


<% end %>