<%= bootstrap_form_for(event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :artist, id: :event_artist %>
  </div>

  <div class="field">
    <%= form.text_field :description, id: :event_description %>
  </div>

  <div class="field">
    <%= form.text_field :price_low, id: :event_price_low %>
  </div>

  <div class="field">
    <%= form.text_field :price_high, id: :event_price_high %>
  </div>

  <div class="field">
    <%= form.date_field :event_date, id: :event_event_date %>
  </div>

  <% if event.empty%>
    <div class="field">
      <%= form.number_field :rows, id: :rows %>
    </div>

    <div class="field">
      <%= form.label :seats_in_row %>
      <input type="number" id="seats_in_row" name="event[seats_in_row]" class="form-control"/>
    </div>
  <% end %>

  <div class="field">
    <%= form.check_box :adults_only %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
